<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBarOverlay">false</item>
    </style>

    <style name="MyTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LoginFormStyle">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">.7</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:padding">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="LoginBtnStyle">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_weight">.5</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#b40226</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:text">@string/prompt_sign_in</item>
    </style>

    <style name="CustEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:inputType">text</item>
    </style>


    <style name="SplashBtn">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="TextAppearenceNew" parent="@android:style/TextAppearance">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="DashboardBtn">
        <item name="android:layout_weight">.5</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textSize">30dp</item>
    </style>

    <style name="EtBgWhiteNoBorder">
        <item name="android:colorControlNormal">@android:color/white</item>
        <item name="android:colorControlActivated">@android:color/white</item>
        <item name="android:colorControlHighlight">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/bg_floating_et</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:inputType">text</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

</resources>
