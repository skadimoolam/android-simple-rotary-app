<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin"
    android:background="@color/formBg">

    <TextView
        android:id="@+id/tv_profile_username"
        android:text="Username : Adi"
        style="@style/ProfileText"/>

    <TextView
        android:id="@+id/tv_profile_email"
        android:text="Email : adi@adi.com"
        style="@style/ProfileText"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_profile_tmp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_account_circle"
            android:layout_width="100dp"
            android:layout_height="100dp"/>

        <Button
            android:onClick="browsePhoto"
            style="@style/LoginBtnStyle"
            android:layout_margin="0dp"
            android:layout_gravity="center_vertical"
            android:text="Browse Photo"/>

    </LinearLayout>

    <Button
        android:layout_weight="0"
        android:onClick="uploadProfile"
        style="@style/LoginBtnStyle"
        android:text="Upload Profile"
        android:id="@+id/btn_profile_upload_pic" />

</LinearLayout>

