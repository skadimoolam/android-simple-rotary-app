<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    card_view:cardBackgroundColor="#eee"
    card_view:cardElevation="4dp"
    card_view:cardCornerRadius="4dp"
    android:id="@+id/member_host_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_alignParentStart="true"
            android:id="@+id/iv_member_photo"
            android:src="@drawable/ic_account_circle"
            android:layout_width="100dp"
            android:layout_height="100dp"/>

        <LinearLayout
            android:id="@+id/ll_text_parent"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/iv_member_photo"
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <TextView
                android:textSize="18sp"
                android:id="@+id/tv_mem_name"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:text="Sathiya Moorty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textSize="18sp"
                android:id="@+id/tv_mem_designation"                android:text="President"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <ImageView
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_chevron_right"
            android:layout_width="50dp"
            android:layout_height="100dp"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>